// This is included in every view and connects it with the right model/controller. 


	// Below is a general "get" function


	function get(method) {

		$.post("<?php __DIR__.'/../server/models/'.$type.'.php' ?>", 
		{type: "direct", method: method, uid: "<?php echo $SESSION["id"]; ?>"}, 
		function(data) { $('div[data-model=' + method + ']').html(data); });
	
	};

	
	// The controllers exist primarily to connect with complicated get and set model methods
	
	<?php require_once __DIR__.'/'.$type.'.js'; ?>
